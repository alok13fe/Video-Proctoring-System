{
  "name": "Video Proctoring System",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:frontend": "cd apps/excalidraw && pnpm build",
    "dev": "turbo run dev",
    "start:frontend": "cd apps/frontend && pnpm start",
    "start:http-backend": "cd apps/http-backend && pnpm start",
    "start:ws-backend": "cd apps/ws-backend && pnpm start",
    "start:worker": "cd apps/worker && pnpm start",
    "db:generate": "cd packages/db && npx prisma generate",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
